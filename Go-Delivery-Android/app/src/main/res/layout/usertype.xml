<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:padding="15dp"
    android:background="@drawable/main_background"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000">


            <Button
                android:id="@+id/LogoutButtonID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Logout"
                android:textSize="15dp"
                android:onClick="LogOutClicked"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/custom_button"
                />

        </LinearLayout>





    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="4"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">


        <Button
            android:id="@+id/UserTypeSubmitJobButtonID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:text="Submit a Job"
            android:textSize="20dp"
            android:onClick="ClientButtonClicked"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

        </LinearLayout>

        <Button
            android:id="@+id/UserTypeCarryJobButtonID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:text="Carry a Job"
            android:textSize="20dp"
            android:onClick="DeliveryButtonClicked"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_button"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </LinearLayout>


        <Button
            android:id="@+id/UserTypeProfileButtonID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="Profile"
            android:textSize="20dp"
            android:onClick="ProfileButtonClicked"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_button"/>






    </LinearLayout>






    </LinearLayout>
